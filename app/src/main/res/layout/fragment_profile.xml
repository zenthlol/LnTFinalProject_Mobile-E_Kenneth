<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:layout_margin="50px">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LL_fragmentProfile_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Name :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tools_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"

                tools:text="Name"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50px"
            android:id="@+id/LL_fragmentProfile_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/LL_fragmentProfile_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Bimbel ID :"
                android:textSize="20dp" />

            <TextView
                android:layout_marginLeft="50px"
                android:id="@+id/tools_bimbelID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="Bimbel ID"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50px"
            android:id="@+id/LL_fragmentProfile_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/LL_fragmentProfile_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tools_email"
                android:layout_marginLeft="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Email address"
                android:textSize="20dp" />

        </LinearLayout>






        <Button
            android:layout_marginTop="50px"
            app:layout_constraintTop_toBottomOf="@+id/LL_fragmentProfile_3"
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Logout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>